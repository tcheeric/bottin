<?xml version="1.0" encoding="UTF-8"?>
<Context>

    <!-- Define a datasource -->
    <Resource name="jdbc/MyLocalDB"
              auth="Container"
              type="javax.sql.DataSource"
              driverClassName="org.postgresql.Driver"
              url="jdbc:postgresql://localhost:5432/bottin"
              username="postgres"
              password="postgres"
              maxTotal="20"
              maxIdle="10"
              maxWaitMillis="-1"/>

</Context>